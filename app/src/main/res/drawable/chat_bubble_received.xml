<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 말풍선 배경색 -->
    <solid android:color="#FFFFFF" /> <!-- 흰색 (받은 메시지) -->

    <!-- 말풍선 둥근 테두리 -->
    <corners android:radius="16dp" />

    <!-- 테두리 추가 -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" /> <!-- 옅은 회색 테두리 -->

    <!-- 안쪽 여백 -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
